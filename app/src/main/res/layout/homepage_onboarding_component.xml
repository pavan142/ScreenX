<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerHorizontal="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title1"
                android:textSize="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/titillium_web_light"
                android:layout_centerHorizontal="true"
                android:text="@string/onboarding_theproblem_title1">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title2"
                android:textSize="32dp"
                android:textColor="@color/base_color"
                android:layout_below="@id/title1"
                android:fontFamily="@font/bad_script_regular"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:text="@string/onboarding_theproblem_title2">
            </TextView>
            <ImageView
                android:layout_marginHorizontal="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/image"
                android:layout_below="@id/title2"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_man_on_way">
            </ImageView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="We made this app to search them all and keep them organized">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
