<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/capture_button_exit_bkg"
    tools:background="#000000">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="01dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

    <View
        android:id="@+id/border"
        android:layout_width="52dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="@id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/capture_button_exit_border" />

    <View
        android:id="@+id/exit_button_anchor_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/close_large"
        android:backgroundTint="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/border"
        app:layout_constraintTop_toTopOf="@id/border"
        app:layout_constraintBottom_toBottomOf="@id/border"
        app:layout_constraintRight_toRightOf="@id/border" />

</androidx.constraintlayout.widget.ConstraintLayout>
